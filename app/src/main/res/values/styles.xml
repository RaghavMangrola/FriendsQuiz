<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4A148C</item>
        <item name="colorPrimaryDark">#340f63</item>
        <item name="colorAccent">#7222d2</item>
    </style>

    <style name="Question">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#F3E5F5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">#E1BEE7</item>
        <item name="android:buttonTint">#673ab7</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:hint">Enter Answer</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">#E1BEE7</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#E1BEE7</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">#673ab7</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">24dp</item>
    </style>



</resources>
